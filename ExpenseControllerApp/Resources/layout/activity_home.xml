<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#00CC99">

    <RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:textColor="#fff"
        android:textSize="25sp"
        android:text="Welcome Home!!!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />
        <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense Category"
        android:layout_below="@id/tv1"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Expense Category"
        android:layout_below="@id/b1"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Expense Category"
        android:layout_below="@id/b2"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense Entry"
        android:layout_below="@id/b3"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Expenses"
        android:layout_below="@id/b4"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Report"
        android:layout_below="@id/b5"
        android:layout_marginTop="17dp" />
        <Button
        android:id="@+id/b7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_below="@id/b6"
        android:layout_marginTop="17dp" />
    </RelativeLayout>

</ScrollView>
